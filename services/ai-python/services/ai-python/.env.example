# --- Service ---
AI_HOST=0.0.0.0
AI_PORT=8000

# --- API Rust (para actualizar estado / leer metadata si quieres) ---
DOCOPS_API_URL=http://HOST:8080

# --- Redis queue ---
REDIS_URL=redis://HOST:6379
REDIS_QUEUE_NAME=docops:jobs

# --- Qdrant ---
QDRANT_URL=http://HOST:6333
QDRANT_COLLECTION=docops_chunks

# --- Object Storage (conceptual, si luego quieres descargar desde MinIO/S3) ---
S3_ENDPOINT=http://HOST:9000
S3_BUCKET=docops
S3_ACCESS_KEY=YOUR_ACCESS_KEY
S3_SECRET_KEY=YOUR_SECRET_KEY
